        <h2>Lägg till en bok i biblioteket</h2>

        <table class="form-table">
            <form action="{{ path('create_book') }}" method="post">
                <tr>
                    <td class="colText"><label for="title">Titel:</label></td>
                    <td class="colInput"><input type="text" id="title" name="title" required></td>
                </tr>
                <tr>
                    <td><label for="isbn">ISBN:</label></td>
                    <td><input type="text" id="isbn" name="isbn" required></td>
                </tr>
                <tr>
                    <td><label for="author">Författare:</label></td>
                    <td><input type="text" id="author" name="author" required></td>
                </tr>

                <tr>
                    <td><label for="image">Bild-URL:</label></td>
                    <td><input type="text" id="image" name="image" required></td>
                </tr>

                <tr>
                    <td colspan="2" class="bottom-table"><input class="lib-btn" type="submit" value="Skicka"></td>
                </tr>
            </form>
        </table>

    </div>

    <div class="main-img">
        <img class="lucky-img" src="{{ asset('img/about.jpg') }}" alt="Bird">
