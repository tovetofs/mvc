<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </head>
    <body>
        <div class="bigheader">
            <nav class="navbar2">
                <div class="onelink"><a href="{{ path('index') }}">Home</a></div>
                <div class="onelink"><a href="{{ path('about') }}">About</a></div>
                {# <div class="onelink"><a href="{{ path('lucky') }}">Lucky</a></div> #}
                <div class="onelink"><a href="{{ path('api') }}">Api routes</a></div>
                <div class="dropdown">
                    <div class="dropdown-link">
                        Exercises
                    </div>
                    <div class="dropdown-content">
                        <p><a href="{{ path('lucky') }}" class="dist">Kmom01 - Lucky</a></p>
                        <p><a href="{{ path('card') }}" class="dist">Kmom02 - Card</a></p>
                        <p><a href="{{ path('game') }}" class="dist">Kmom03 - Game</a></p>
                        <p><a href="{{ path('app_library') }}" class="dist">Kmom05 - Library</a></p>
                        <p><a href="{{ path('metrics') }}" class="dist">Kmom06 - Metrics</a></p>
                    </div>
                </div>
                <div class="dropdown">
                    <div class="dropdown-link">
                        <a href="{{ path('report') }}">Report
                        </a>
                    </div>
                    <div class="dropdown-content">
                        <p><a class="dist" href="{{ path('report') }}#kmom01">Kmom01</a></p>
                        <p><a class="dist" href="{{ path('report') }}#kmom02">Kmom02</a></p>
                        <p><a class="dist" href="{{ path('report') }}#kmom03">Kmom03</a></p>
                        <p><a class="dist" href="{{ path('report') }}#kmom04">Kmom04</a></p>
                        <p><a class="dist" href="{{ path('report') }}#kmom05">Kmom05</a></p>
                    </div>
                </div>
            </nav>
            <div class="hero-title"><h1>Min sida i MVC-kursen</h1></div>

            <div class="hero-image">
                <img src="{{ asset('img/background3.jpg') }}" alt="Landscape">
            </div>

            <svg class="svg-hero" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 300"><path fill="#faf5ee" fill-opacity="1" d="M0,160L48,181.3C96,203,192,245,288,245.3C384,245,480,203,576,192C672,181,768,203,864,202.7C960,203,1056,181,1152,160C1248,139,1344,117,1392,106.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
            </svg>
        </div>
        

        {# <header class="circle-header">
            <img src="{{ asset('img/bird1.jpg') }}" alt="Bird">
            <img src="{{ asset('img/bird2.jpg') }}" alt="Bird">
            <img src="{{ asset('img/bird3.jpg') }}" alt="Bird">
        </header> #}
        
        <main class="main">

            {% block body %}{% endblock %}

        </main>


        <footer class="myfoot">
            <div class="small-circle one"></div>
            <div class="small-circle two"></div>
            <div class="small-circle three"></div>
            <div class="foot-text">(C) Tove 2023</div>
            <div class="small-circle three"></div>
            <div class="small-circle two"></div>
            <div class="small-circle one"></div>
        </footer>
    </body>
</html>
